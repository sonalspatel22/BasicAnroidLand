<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center_vertical</item>
        <item name="actionButtonStyle">@style/ActionButtonStyle</item>

    </style>

    <style name="TabLayout_Theme" parent="@style/AppTheme">
        <item name="android:singleLine">true</item>
    </style>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:maxWidth">50dip</item>
        <item name="android:paddingLeft">0dip</item>
        <item name="android:paddingRight">0dip</item>
    </style>

    <style name="TransperentTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:background">@color/transperent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:alertDialogTheme">@style/AppTheme.AlertDialogTheme</item>
        <item name="android:dialogTheme">@style/AppTheme.DialogTheme</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:anim/fade_in</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="RatingBarBlack" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/blackgray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
    </style>

    <style name="My_DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/transperent</item>
        <item name="android:windowBackground">@drawable/bg_loading</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:background">@color/transperent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.DialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorBlack</item>
        <item name="android:windowFullscreen">false</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AlertDialogTheme" parent="Theme.AppCompat.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/colorWhite</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorPrimary">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
    </style>

    <style name="MyToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorPrimary">@color/transperent</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorWhite</item>
        <item name="android:background">@color/transperent</item>
        <item name="colorControlNormal">@color/colorWhite</item>

    </style>

    <style name="MyActivityTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>

    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="MySearchToolbarTheme" parent="Widget.AppCompat.Toolbar">
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="selectableItemBackground">?android:selectableItemBackground</item>
        <item name="selectableItemBackgroundBorderless">?android:selectableItemBackground</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/white</item>

    </style>


    <style name="MyMaterialTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
    </style>

    <style name="RentSwitchCompatStyle">
        <item name="thumbTint">@color/buy_color</item>
        <item name="trackTint">@color/buy_color</item>
    </style>


</resources>
